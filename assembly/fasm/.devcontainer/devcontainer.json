{
    "name": "FASM Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "13xforever.language-x86-64-assembly",
                "maziac.asm-code-lens",
                "hugoam.two-way-binding",
                "ms-vscode.cpptools",
                "dan-c-underwood.assembly"
            ],
            "settings": {
                "editor.formatOnSave": false,
                "files.associations": {
                    "*.asm": "fasm",
                    "*.inc": "fasm",
                    "*.fasm": "fasm"
                },
                "[fasm]": {
                    "editor.tabSize": 4,
                    "editor.insertSpaces": false
                }
            }
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "ASM_PATH": "/usr/local/bin",
        "FASM_PATH": "/usr/local/bin/fasm"
    },
    "postCreateCommand": "fasm 2>&1 | head -n 1 && ld --version && gdb --version",
    "workspaceFolder": "/workspace"
}

