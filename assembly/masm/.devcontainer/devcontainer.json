{
    "name": "MASM Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "13xforever.language-x86-64-assembly",
                "maziac.asm-code-lens",
                "hugoam.two-way-binding",
                "ms-vscode.cpptools"
            ],
            "settings": {
                "editor.formatOnSave": false,
                "files.associations": {
                    "*.asm": "x86",
                    "*.s": "x86",
                    "*.S": "x86"
                },
                "[x86]": {
                    "editor.tabSize": 4
                }
            }
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "ASM_PATH": "/usr/bin"
    },
    "postCreateCommand": "nasm --version && gdb --version",
    "workspaceFolder": "/workspace"
}

