{
    "name": "NASM Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "13xforever.language-x86-64-assembly",
                "maziac.asm-code-lens",
                "hugoam.two-way-binding",
                "ms-vscode.cpptools",
                "dan-c-underwood.assembly"
            ],
            "settings": {
                "editor.formatOnSave": false,
                "files.associations": {
                    "*.asm": "nasm",
                    "*.s": "nasm",
                    "*.S": "nasm",
                    "*.inc": "nasm"
                },
                "[nasm]": {
                    "editor.tabSize": 4,
                    "editor.insertSpaces": false
                },
                "nasm.format.enable": true
            }
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "ASM_PATH": "/usr/bin",
        "NASM_PATH": "/usr/bin/nasm"
    },
    "postCreateCommand": "nasm --version && ld --version && gdb --version",
    "workspaceFolder": "/workspace"
}

