{
    "name": "Deno Development Container",
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "features": {
        "ghcr.io/devcontainers/features/deno:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "denoland.vscode-deno"
            ],
            "settings": {
                "deno.enable": true,
                "deno.lint": true,
                "deno.unstable": false
            }
        }
    },
    "remoteUser": "vscode",
    "remoteEnv": {
        "DENO_INSTALL": "/usr/local/deno"
    },
    "postCreateCommand": "deno --version",
    "workspaceFolder": "/workspace"
}