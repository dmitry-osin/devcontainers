{
    "name": "Deno Development Container",
    "image": "denoland/deno:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "denoland.vscode-deno"
            ],
            "settings": {
                "deno.enable": true,
                "deno.lint": true,
                "deno.unstable": false
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "deno --version",
    "workspaceFolder": "/workspace"
}