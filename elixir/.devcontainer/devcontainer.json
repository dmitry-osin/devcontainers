{
    "name": "Elixir Project",
    "image": "hexpm/elixir:1.18.1-erlang-27.2-ubuntu-noble-20241015",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "elixir-lsp.elixir-ls",
                "phoenixframework.phoenix"
            ]
        }
    },
    "remoteUser": "vscode",
    "onCreateCommand": "mix local.hex --force && mix local.rebar --force",
    "postCreateCommand": "elixir --version && mix --version",
    "workspaceFolder": "/workspace"
}