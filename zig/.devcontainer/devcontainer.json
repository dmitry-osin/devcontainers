{
    "name": "Zig Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ziglang.vscode-zig"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "zig version",
    "workspaceFolder": "/workspace"
}